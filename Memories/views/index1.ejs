<!DOCTYPE html>
<html>
    <head>
            <title>Diary App</title>
            <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
            <link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
    </head>
    <body>
         <div class="ui fixed inverted menu">
                 <div class="ui container">
                        <div class= "header item">INDEX </div> 
                        <a href="/diary" class="item">HOME</a>
                        <a href="/diary/new" class="item">New Page</a>
                        <a href="/register" class="item">Sign Up!</a>
                        <a href="/login" class="item">Login!</a>
                        <a href="/logout" class="item">Log out</a>
                </div>
        </div>

<div class="ui main text container">
    <div class="ui huge header">INDEX</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% pages.forEach(function(page){ if(userName  ===  page.author.username ){%>
                <!-- <div style="margin-top: 100px; margin-left: 30%"> -->
                    <div class="content">
                        <a style="color: black;font-weight: bolder;font-size: 200%" class="header" href="/diary/<%=page._id %>"> <%= page.title %></a>
                    </div>
                    
                    <div class="item">
                    
                    <div class="image">
                            <img  src="<%= page.image %> ">
                    </div>
                    
                    <div class="description">
                         <p> <%= page.body %>...</p>
                         

                    </div>
                    <div class="extra">
                            <a class="ui floated basic blue button" href="/diary/<%=page._id %>">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                    </div>
                    
                    
                    
                    
                </div>  
            <%} }) %>
        </div>
    </div>
</div>



</body>
    
</html>