<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header">INDEX</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% pages.forEach(function(page){ if(userName  ===  page.author.username ){%>
                <!-- <div style="margin-top: 100px; margin-left: 30%"> -->
                    <div class="content">
                        <a style="color: black;font-weight: bolder;font-size: 200%" class="header" href="/diary/<%=page._id %>"> <%= page.title %></a>
                    </div>
                    
                    <div class="item">
                    
                    <div class="image">
                            <img  src="<%= page.image %> ">
                    </div>
                    
                    <div class="description">
                         <p> <%= page.body %>...</p>
                         

                    </div>
                    <div class="extra">
                            <a class="ui floated basic blue button" href="/diary/<%=page._id %>">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                    </div>
                    
                    
                    
                    
                </div>  
            <%} }) %>
        </div>
    </div>
</div>



